[user]
    email = pboivin@gmail.com
    name = Patrick Boivin

[credential]
    helper = cache --timeout=3600

[core]
    editor = vim
    excludesfile = ~/.gitignore_global

[color]
    ui = auto

[push]
    default = current

[alias]
    graph = "log --color --graph --decorate --oneline --branches --remotes --tags"
