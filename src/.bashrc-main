#=============================================================================
# Path
#=============================================================================

PATH=$HOME/bin:$PATH

#=============================================================================
# Prompt
#=============================================================================

function color_normal() {
    echo '\e[0;49;'$1'm'
}

function color_bold() {
    echo '\e[01;'$1'm'
}

function color_clear() {
    echo '\e[0m'
}

COLOR_RED="31"
COLOR_GREEN="32"
COLOR_YELLOW="33"
COLOR_BLUE="34"
COLOR_WHITE="37"
COLOR_GREY="90"

PROMPT_DATE='($(date +%H:%M:%S))'
PROMPT_USER='\u@'"$(hostname)"
PROMPT_LOCATION='\w'
PROMPT_SYMBOL='\n$ '
PS1="$(color_normal $COLOR_YELLOW)$PROMPT_DATE $PROMPT_USER : $(color_bold $COLOR_WHITE)$PROMPT_LOCATION $(color_clear)$PROMPT_SYMBOL"
# Result:
#    (12:34:56) pboivin@embee : ~/Workspace
#    $ ...

#=============================================================================
# Aliases
#=============================================================================

# Platform-specific

if [ "$(uname)" == "Linux" ]
then
    alias ls='env ls -FC --color=auto --group-directories-first'
    alias l1='env ls -1Fv --color=auto'
    alias files='gnome-open'
fi

if [ "$(uname)" == "Darwin" ]
then
    alias ls='env ls -FCG'
    alias l1='env ls -1FG'
    alias mvim='/Applications/MacVim.app/Contents/MacOS/Vim -g'
    alias tedit='open -a textedit'
    alias files='open -a finder .'
fi

# Shell

alias l='ls -lh'
alias ll='l -A'
alias la='ls -A'
alias l2='ls *'

alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

function cdd() {
    if [ $# -lt 1 ]; then
        echo "Error: need one argument"
    else
        local destination=$(dirname "$1")
        cd "$destination"
    fi
}

function mkd {
    if [ -z "$1" ]
    then
        echo "Error: need one argument"
        return
    fi

    mkdir "$1"
    cd "$1"
}

function findi {
    find . -iname "$1"
}

function findiv {
    find . -iname "$1" | vim -
}

function findir {
    find . -iname "$1" -type d
}

# Editors

alias vimm='vim -u NONE'

# Edit files

alias vimrc="vim -p ~/.vimrc*"
alias bashrc="vim -p ~/.bashrc*"

# Git

alias gd="git diff"
alias gdh="git diff HEAD"
alias gp="git log -p"
alias gl="git log"
alias gll="git log --name-status"
alias gl1="git log --oneline"
alias gs="git status"
alias gb="git branch"

# Places

alias wo="cd $HOME/Workspace"

# Misc

alias tmux="TERM=screen-256color-bce tmux"
alias ssh-hosts="cat $HOME/.ssh/config | grep 'Host ' | egrep -v '^#'"

#=============================================================================
# Helpers
#=============================================================================

if [ -d ~/.bash-helpers ]; then
    for f in ~/.bash-helpers/*; do
        . "$f"
    done
fi

#=============================================================================
# Local config
#=============================================================================

if [ -e ~/.bashrc_local ]
then
    . ~/.bashrc_local
fi

