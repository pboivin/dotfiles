# A basic Bash configuration file
# Assembled by Patrick Boivin from various sources

#=============================================================================
# Path
#=============================================================================

PATH=$HOME/bin:$PATH

#=============================================================================
# Prompt
#=============================================================================

function color_normal() {
    echo '\e[0;49;'$1'm'
}

function color_bold() {
    echo '\e[01;'$1'm'
}

function color_clear() {
    echo '\e[0m'
}

COLOR_RED="31"
COLOR_GREEN="32"
COLOR_YELLOW="33"
COLOR_BLUE="34"
COLOR_WHITE="37"
COLOR_GREY="90"

PROMPT_DATE='($(date +%H:%M:%S))'
PROMPT_USER='\u@'"$(hostname)"
PROMPT_LOCATION='\w'
PROMPT_SYMBOL='\n$ '
PS1="$(color_normal $COLOR_YELLOW)$PROMPT_DATE $PROMPT_USER : $(color_bold $COLOR_WHITE)$PROMPT_LOCATION $(color_clear)$PROMPT_SYMBOL"
# Result:
#    (12:34:56) pboivin@embee : ~/Workspace
#    $ ...

#=============================================================================
# Aliases
#=============================================================================

# Platform-specific

if [ "$(uname)" == "Linux" ]
then
    alias ls='env ls -FC --color=auto --group-directories-first'
    alias l1='env ls -1Fv --color=auto'
    alias files='gnome-open'
fi

if [ "$(uname)" == "Darwin" ]
then
    alias ls='env ls -FCG'
    alias l1='env ls -1FG'
    alias mvim='/Applications/MacVim.app/Contents/MacOS/Vim -g'
    alias tedit='open -a textedit'
    alias files='open -a finder .'
fi

# Shell

alias l='ls -lh'
alias ll='l -A'
alias la='ls -A'
alias l2='ls *'

alias bk='cd "$OLDPWD"'

function here {
    pwd > "$HOME/.SAVED_PWD"
}

function there {
    touch "$HOME/.SAVED_PWD"
    cd $(cat "$HOME/.SAVED_PWD")
}

alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

alias dus='du -s * . | sort -n'

function findi {
    find . -iname "*$1*"
}

function findiv {
    find . -iname "*$1*" | vim -
}

alias fl='find .| sort | less'

function grepi {
    local cmd="grep -nri $1 ."
    local i

    if [ $# -lt 1 ]
    then
        echo "Error: need at least one argument"
        return
    fi

    # build grep chain with function arguments
    i=2
    while [ $i -le $# ]
    do
        eval 'cmd="$cmd | grep -i $'$i'"'
        let i+=1
    done

    # run grep chain
    eval "$cmd"
}

function cdd() {
    if [ $# -lt 1 ]; then
        echo "Error: need one argument"
    else
        local destination=$(dirname "$1")
        cd "$destination"
    fi
}

# Editors

alias vimm='vim -u NONE'

# Edit files

alias vimrc="vim -p ~/.vimrc*"
alias bashrc="vim -p ~/.bashrc*"

# Git

alias gd="git diff"
alias gdh="git diff HEAD"
alias gp="git log -p"
alias gl="git log"
alias gll="git log --name-status"
alias gl1="git log --oneline"
alias gs="git status"
alias gb="git branch"

# Places

alias wo="cd $HOME/Workspace"

# Misc

alias tmux="TERM=screen-256color-bce tmux"

#=============================================================================
# Local config
#=============================================================================

if [ -e ~/.bashrc_local ]
then
    . ~/.bashrc_local
fi

